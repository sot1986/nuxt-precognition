{
  "name": "nuxt-precognition",
  "type": "module",
  "version": "0.0.4",
  "description": "Nuxt module implementing Precognition protocol (inspired by official Laravel Precognition) for backend precognitive validation.",
  "author": {
    "name": "sot1986",
    "email": "sot@8dplus.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/sot1986/nuxt-precognition",
  "repository": {
    "type": "git",
    "url": "https://github.com/sot1986/nuxt-precognition"
  },
  "keywords": [
    "precognition",
    "nuxt",
    "laravel",
    "zod"
  ],
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "release:locally": "npm run lint && npm run test && npm run prepack && npm pack && mv ./nuxt-precognition-*.tgz ../Released",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@nuxt/kit": "^3.11.2",
    "defu": "^6.1.4",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^0.3.12",
    "@nuxt/module-builder": "^0.5.5",
    "@nuxt/schema": "^3.11.2",
    "@nuxt/test-utils": "^3.12.1",
    "@tailwindcss/forms": "^0.5.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.11",
    "autoprefixer": "^10.4.19",
    "changelogen": "^0.5.5",
    "eslint": "^8.57.0",
    "h3": "^1.11.1",
    "nuxt": "^3.11.2",
    "playwright-core": "^1.44.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.0.17",
    "zod": "^3.23.8"
  }
}
